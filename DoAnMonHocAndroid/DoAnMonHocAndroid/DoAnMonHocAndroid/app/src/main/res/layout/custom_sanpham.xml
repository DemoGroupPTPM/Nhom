<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/imgHinhanhSP"
        android:src="@mipmap/ic_launcher"
        android:layout_margin="10dp"
        android:layout_width="120dp"
        android:layout_height="120dp"/>

    <LinearLayout
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtMaSP"
            android:textColor="#0B0A0B"
            android:textStyle="bold"
            android:textSize="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Mã SP" />

        <TextView
            android:textColor="#0B0A0B"
            android:textStyle="bold"
            android:textSize="15dp"
            android:id="@+id/txtTenSP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="tên sản phẩm" />

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_BH"
            android:layout_below="@+id/layout_ten"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo Hành:"
                />
            <TextView
                android:id="@+id/txtBH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảo hành"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_gia"
            android:layout_below="@+id/layout_BH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gía:"
                />
            <TextView
                android:id="@+id/txtdonGia"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đơn Gía"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:id="@+id/layout_sl"
            android:layout_below="@+id/layout_gia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng :  "
                />
            <TextView
                android:id="@+id/txtSL"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số Lượng"
                />
        </LinearLayout>


    </LinearLayout>






    </LinearLayout>
</LinearLayout>







